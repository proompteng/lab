{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "dev": {
      "persistent": true,
      "cache": true
    },
    "start:build": {
      "outputs": ["services/jangar/start/dist/**"],
      "inputs": [
        "services/jangar/start/**",
        "services/jangar/package.json",
        "services/jangar/tsconfig.json"
      ]
    },
    "start:dev": {
      "persistent": true,
      "cache": false
    }
  }
}
