{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",
  "useTabs": false,
  "tabWidth": 2,
  "printWidth": 120,
  "singleQuote": true,
  "jsxSingleQuote": false,
  "quoteProps": "as-needed",
  "trailingComma": "all",
  "semi": false,
  "arrowParens": "always",
  "bracketSameLine": false,
  "bracketSpacing": true,
  "ignorePatterns": [
    "**/node_modules",
    "**/.next",
    "**/.output",
    "**/dist",
    "**/build",
    "**/.mastra",
    "**/.venv",
    "**/.artifacts",
    "**/.artifacts/**",
    "**/.worktrees",
    "**/.worktrees/**",
    "tmp",
    "**/coverage",
    "**/bun.lockb",
    "**/bun.lock",
    "**/next-env.d.ts",
    "**/routeTree.gen.ts",
    "**/src/app/routeTree.gen.ts",
    "argocd/**",
    "apps/landing/src/components/ui",
    "apps/reestr/src/components/ui",
    "services/jangar/src/components/ui",
    "src/components/ui",
    "schemas",
    "services/facteur/internal/facteurpb",
    "services/dernier/vendor",
    "apps/froussard/src/proto",
    "services/dernier/app/assets/builds",
    "packages/temporal-bun-sdk/vendor",
    "packages/temporal-bun-sdk/src/proto",
    "packages/backend/convex/_generated",
    "services/jangar/convex/_generated",
    "packages/codex/src/app-server",
    "packages/temporal-bun-sdk/tests",
    "packages/temporal-bun-sdk-example",
    "charts/**/crds",
    "charts/**/templates",
    "apps/docs/.source"
  ]
}
