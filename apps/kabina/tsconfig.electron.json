{
  "compilerOptions": {
    "rootDir": "electron",
    "outDir": "dist-electron",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "NodeNext",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "NodeNext",
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noEmit": false,
    "types": ["node", "electron"]
  },
  "include": ["electron/**/*.ts"],
  "exclude": ["dist", "dist-electron", "src"]
}
