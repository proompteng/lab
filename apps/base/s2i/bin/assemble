#!/bin/bash -e
#
# S2I assemble script for the 'alpine' image.
# The 'assemble' script builds your application source so that it is ready to run.
#
# For more information refer to the documentation:
#	https://github.com/openshift/source-to-image/blob/master/docs/builder_image.md
#

# If the 'alpine' assemble script is executed with the '-h' flag, print the usage.
if [[ "$1" == "-h" ]]; then
	exec /usr/libexec/s2i/usage
fi

# Restore artifacts from the previous build (if they exist).
if [ -d "/tmp/artifacts/node_modules" ]; then
  echo "---> Restoring node_modules build artifacts..."
  mv /tmp/artifacts/node_modules ./node_modules
fi

echo "---> Installing application source..."
cp -Rf /tmp/src/. ./

echo "---> Building application from source..."

if [ -f "bun.lockb" ] || [ -f "bun.lock" ]; then
  echo "---> Found Bun lockfile, installing dependencies with bun..."
  bun install --frozen-lockfile
elif [ -f "package.json" ]; then
  echo "---> Found package.json (no Bun lockfile), installing dependencies with bun..."
  bun install
else
  echo "---> No Bun lockfile or package.json found. Skipping dependency installation."
fi
