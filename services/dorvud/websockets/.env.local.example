# Alpaca sandbox credentials (replace with yours)
ALPACA_KEY_ID=your-sandbox-key
ALPACA_SECRET_KEY=your-sandbox-secret
ALPACA_FEED=test
ALPACA_STREAM_URL=wss://stream.data.alpaca.markets
ALPACA_BASE_URL=https://data.sandbox.alpaca.markets
SYMBOLS=FAKEPACA
ENABLE_TRADE_UPDATES=false

# Reconnect and dedup tuning
RECONNECT_BASE_MS=500
RECONNECT_MAX_MS=30000
DEDUP_TTL_SEC=5
DEDUP_MAX_ENTRIES=10000

# Kafka (adjust to your local cluster)
KAFKA_BOOTSTRAP=localhost:9093
KAFKA_SECURITY_PROTOCOL=PLAINTEXT
KAFKA_SASL_MECH=SCRAM-SHA-512
KAFKA_SASL_USER=local-user
KAFKA_SASL_PASSWORD=local-password
KAFKA_LINGER_MS=30
KAFKA_BATCH_SIZE=32768
KAFKA_ACKS=all

TOPIC_TRADES=torghut.nvda.trades.v1
TOPIC_QUOTES=torghut.nvda.quotes.v1
TOPIC_BARS_1M=torghut.nvda.bars.1m.v1
TOPIC_STATUS=torghut.nvda.status.v1
# Uncomment to enable trading updates
# TOPIC_TRADE_UPDATES=torghut.nvda.trade_updates.v1

HEALTH_PORT=8080
METRICS_PORT=9090
