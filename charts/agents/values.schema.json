{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "nameOverride": { "type": "string" },
    "fullnameOverride": { "type": "string" },
    "namespaceOverride": { "type": "string" },
    "replicaCount": { "type": "integer", "minimum": 1 },
    "autoscaling": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "minReplicas": { "type": "integer", "minimum": 1 },
        "maxReplicas": { "type": "integer", "minimum": 1 },
        "targetCPUUtilizationPercentage": { "type": "integer", "minimum": 1, "maximum": 100 },
        "targetMemoryUtilizationPercentage": { "type": ["integer", "null"], "minimum": 1, "maximum": 100 }
      },
      "additionalProperties": false
    },
    "image": {
      "type": "object",
      "properties": {
        "repository": { "type": "string" },
        "tag": { "type": "string" },
        "digest": { "type": "string" },
        "pullPolicy": { "type": "string" },
        "pullSecrets": { "type": "array", "items": { "type": "string" } }
      },
      "additionalProperties": false
    },
    "runner": {
      "type": "object",
      "properties": {
        "image": {
          "type": "object",
          "properties": {
            "repository": { "type": "string" },
            "tag": { "type": "string" },
            "digest": { "type": "string" },
            "pullPolicy": { "type": "string" },
            "pullSecrets": { "type": "array", "items": { "type": "string" } }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "serviceAccount": {
      "type": "object",
      "properties": {
        "create": { "type": "boolean" },
        "name": { "type": "string" },
        "annotations": { "type": "object", "additionalProperties": { "type": "string" } }
      },
      "additionalProperties": false
    },
    "runnerServiceAccount": {
      "type": "object",
      "properties": {
        "create": { "type": "boolean" },
        "name": { "type": "string" },
        "annotations": { "type": "object", "additionalProperties": { "type": "string" } },
        "setAsDefault": { "type": "boolean" },
        "rbac": {
          "type": "object",
          "properties": {
            "create": { "type": "boolean" },
            "extraRules": { "type": "array", "items": { "type": "object" } }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "rbac": {
      "type": "object",
      "properties": {
        "create": { "type": "boolean" },
        "clusterScoped": { "type": "boolean" },
        "extraRules": { "type": "array", "items": { "type": "object" } }
      },
      "additionalProperties": false
    },
    "service": {
      "type": "object",
      "properties": {
        "type": { "type": "string" },
        "port": { "type": "integer" },
        "annotations": { "type": "object", "additionalProperties": { "type": "string" } },
        "labels": { "type": "object", "additionalProperties": { "type": "string" } }
      },
      "additionalProperties": false
    },
    "grpc": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "port": { "type": "integer" },
        "servicePort": { "type": "integer" },
        "serviceType": { "type": "string", "enum": ["ClusterIP"] }
      },
      "additionalProperties": false
    },
    "resources": {
      "type": "object",
      "properties": {
        "requests": { "type": "object", "additionalProperties": { "type": "string" } },
        "limits": { "type": "object", "additionalProperties": { "type": "string" } }
      },
      "additionalProperties": false
    },
    "podAnnotations": { "type": "object", "additionalProperties": { "type": "string" } },
    "podLabels": { "type": "object", "additionalProperties": { "type": "string" } },
    "securityContext": { "type": "object" },
    "containerSecurityContext": { "type": "object" },
    "nodeSelector": { "type": "object", "additionalProperties": { "type": "string" } },
    "affinity": { "type": "object" },
    "tolerations": { "type": "array", "items": { "type": "object" } },
    "livenessProbe": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "path": { "type": "string" },
        "initialDelaySeconds": { "type": "integer" },
        "periodSeconds": { "type": "integer" },
        "timeoutSeconds": { "type": "integer" },
        "failureThreshold": { "type": "integer" }
      },
      "additionalProperties": false
    },
    "readinessProbe": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "path": { "type": "string" },
        "initialDelaySeconds": { "type": "integer" },
        "periodSeconds": { "type": "integer" },
        "timeoutSeconds": { "type": "integer" },
        "failureThreshold": { "type": "integer" }
      },
      "additionalProperties": false
    },
    "podDisruptionBudget": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "minAvailable": { "type": ["integer", "string"] },
        "maxUnavailable": { "type": ["integer", "string"] },
        "annotations": { "type": "object", "additionalProperties": { "type": "string" } }
      },
      "additionalProperties": false
    },
    "networkPolicy": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "policyTypes": { "type": "array", "items": { "type": "string" } },
        "ingress": { "type": "array", "items": { "type": "object" } },
        "egress": { "type": "array", "items": { "type": "object" } },
        "annotations": { "type": "object", "additionalProperties": { "type": "string" } }
      },
      "additionalProperties": false
    },
    "resourceQuota": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "name": { "type": "string" },
        "hard": { "type": "object", "additionalProperties": { "type": "string" } },
        "scopes": { "type": "array", "items": { "type": "string" } },
        "scopeSelector": { "type": "object" },
        "annotations": { "type": "object", "additionalProperties": { "type": "string" } },
        "labels": { "type": "object", "additionalProperties": { "type": "string" } }
      },
      "additionalProperties": false
    },
    "limitRange": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "name": { "type": "string" },
        "limits": { "type": "array", "items": { "type": "object" } },
        "annotations": { "type": "object", "additionalProperties": { "type": "string" } },
        "labels": { "type": "object", "additionalProperties": { "type": "string" } }
      },
      "additionalProperties": false
    },
    "env": {
      "type": "object",
      "properties": {
        "extra": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "value": { "type": "string" }
            },
            "required": ["name", "value"],
            "additionalProperties": false
          }
        },
        "secrets": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "secretName": { "type": "string" },
              "key": { "type": "string" }
            },
            "required": ["name", "secretName"],
            "additionalProperties": false
          }
        },
        "config": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "configMapName": { "type": "string" },
              "key": { "type": "string" }
            },
            "required": ["name", "configMapName"],
            "additionalProperties": false
          }
        },
        "vars": { "type": "object", "additionalProperties": { "type": "string" } }
      },
      "additionalProperties": false
    },
    "workflowRuntime": {
      "type": "object",
      "properties": {
        "native": {
          "type": "object",
          "properties": {
            "rerunOrchestration": { "type": "string" },
            "rerunOrchestrationNamespace": { "type": "string" },
            "systemImprovementOrchestration": { "type": "string" },
            "systemImprovementOrchestrationNamespace": { "type": "string" }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "envFromSecretRefs": { "type": "array", "items": { "type": "string" } },
    "envFromConfigMapRefs": { "type": "array", "items": { "type": "string" } },
    "controller": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "namespaces": { "type": "array", "items": { "type": "string" } },
        "concurrency": {
          "type": "object",
          "properties": {
            "perNamespace": { "type": "integer", "minimum": 1 },
            "perAgent": { "type": "integer", "minimum": 1 },
            "cluster": { "type": "integer", "minimum": 1 }
          },
          "additionalProperties": false
        },
        "queue": {
          "type": "object",
          "properties": {
            "perNamespace": { "type": "integer", "minimum": 0 },
            "perRepo": { "type": "integer", "minimum": 0 },
            "cluster": { "type": "integer", "minimum": 0 }
          },
          "additionalProperties": false
        },
        "rate": {
          "type": "object",
          "properties": {
            "windowSeconds": { "type": "integer", "minimum": 1 },
            "perNamespace": { "type": "integer", "minimum": 0 },
            "perRepo": { "type": "integer", "minimum": 0 },
            "cluster": { "type": "integer", "minimum": 0 }
          },
          "additionalProperties": false
        },
        "agentRunRetentionSeconds": { "type": "integer", "minimum": 0 },
        "jobTtlSecondsAfterFinished": { "type": "integer", "minimum": 0 },
        "authSecret": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "key": { "type": "string" },
            "mountPath": { "type": "string" }
          },
          "additionalProperties": false
        },
        "vcsProviders": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "deprecatedTokenTypes": {
              "type": "object",
              "additionalProperties": {
                "type": "array",
                "items": { "type": "string", "enum": ["pat", "fine_grained", "api_token", "access_token"] }
              }
            }
          },
          "additionalProperties": false
        },
        "defaultWorkload": {
          "type": "object",
          "properties": {
            "serviceAccountName": { "type": "string" },
            "nodeSelector": { "type": "object", "additionalProperties": { "type": "string" } },
            "tolerations": { "type": "array", "items": { "type": "object" } },
            "affinity": { "type": "object" },
            "topologySpreadConstraints": { "type": "array", "items": { "type": "object" } },
            "podSecurityContext": { "type": "object" },
            "imagePullSecrets": { "type": "array", "items": { "type": "string" } },
            "priorityClassName": { "type": "string" },
            "schedulerName": { "type": "string" }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "orchestrationController": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "namespaces": { "type": "array", "items": { "type": "string" } }
      },
      "additionalProperties": false
    },
    "supportingController": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "namespaces": { "type": "array", "items": { "type": "string" } }
      },
      "additionalProperties": false
    },
    "agentComms": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "nats": {
          "type": "object",
          "properties": {
            "url": { "type": "string" },
            "user": { "type": "string" },
            "password": { "type": "string" },
            "userSecret": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "usernameKey": { "type": "string" },
                "passwordKey": { "type": "string" }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "database": {
      "type": "object",
      "properties": {
        "url": { "type": "string" },
        "secretRef": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "key": { "type": "string" }
          },
          "additionalProperties": false
        },
        "createSecret": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "name": { "type": "string" },
            "annotations": { "type": "object", "additionalProperties": { "type": "string" } }
          },
          "additionalProperties": false
        },
        "caSecret": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "key": { "type": "string" }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "extraVolumes": { "type": "array", "items": { "type": "object" } },
    "extraVolumeMounts": { "type": "array", "items": { "type": "object" } },
    "logging": {
      "type": "object",
      "properties": {
        "level": { "type": "string" }
      },
      "additionalProperties": false
    },
    "podSecurityAdmission": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "createNamespace": { "type": "boolean" },
        "labels": { "type": "object", "additionalProperties": { "type": "string" } }
      },
      "additionalProperties": false
    },
    "kubernetesApi": {
      "type": "object",
      "properties": {
        "host": { "type": "string" },
        "port": { "type": "string" }
      },
      "additionalProperties": false
    },
    "argocdHooks": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "serviceAccountName": { "type": "string" },
        "ttlSecondsAfterFinished": { "type": "integer", "minimum": 0 },
        "syncWaves": {
          "type": "object",
          "properties": {
            "preSync": { "type": "string" },
            "postSync": { "type": "string" }
          },
          "additionalProperties": false
        },
        "image": {
          "type": "object",
          "properties": {
            "repository": { "type": "string" },
            "tag": { "type": "string" },
            "pullPolicy": { "type": "string" }
          },
          "additionalProperties": false
        },
        "preSync": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" }
          },
          "additionalProperties": false
        },
        "postSync": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "waitTimeout": { "type": "string" },
            "cleanup": { "type": "boolean" }
          },
          "additionalProperties": false
        },
        "smoke": {
          "type": "object",
          "properties": {
            "labelSelector": { "type": "string" },
            "agentRun": { "type": "object" }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "controller": {
            "properties": {
              "namespaces": { "type": "array", "minItems": 2 }
            },
            "required": ["namespaces"]
          }
        },
        "required": ["controller"]
      },
      "then": {
        "properties": {
          "rbac": {
            "properties": {
              "clusterScoped": { "const": true }
            },
            "required": ["clusterScoped"]
          }
        },
        "required": ["rbac"]
      }
    },
    {
      "if": {
        "properties": {
          "controller": {
            "properties": {
              "namespaces": { "type": "array", "contains": { "const": "*" } }
            },
            "required": ["namespaces"]
          }
        },
        "required": ["controller"]
      },
      "then": {
        "properties": {
          "rbac": {
            "properties": {
              "clusterScoped": { "const": true }
            },
            "required": ["clusterScoped"]
          }
        },
        "required": ["rbac"]
      }
    },
    {
      "if": {
        "properties": {
          "orchestrationController": {
            "properties": {
              "namespaces": { "type": "array", "minItems": 2 }
            },
            "required": ["namespaces"]
          }
        },
        "required": ["orchestrationController"]
      },
      "then": {
        "properties": {
          "rbac": {
            "properties": {
              "clusterScoped": { "const": true }
            },
            "required": ["clusterScoped"]
          }
        },
        "required": ["rbac"]
      }
    },
    {
      "if": {
        "properties": {
          "orchestrationController": {
            "properties": {
              "namespaces": { "type": "array", "contains": { "const": "*" } }
            },
            "required": ["namespaces"]
          }
        },
        "required": ["orchestrationController"]
      },
      "then": {
        "properties": {
          "rbac": {
            "properties": {
              "clusterScoped": { "const": true }
            },
            "required": ["clusterScoped"]
          }
        },
        "required": ["rbac"]
      }
    },
    {
      "if": {
        "properties": {
          "supportingController": {
            "properties": {
              "namespaces": { "type": "array", "minItems": 2 }
            },
            "required": ["namespaces"]
          }
        },
        "required": ["supportingController"]
      },
      "then": {
        "properties": {
          "rbac": {
            "properties": {
              "clusterScoped": { "const": true }
            },
            "required": ["clusterScoped"]
          }
        },
        "required": ["rbac"]
      }
    },
    {
      "if": {
        "properties": {
          "supportingController": {
            "properties": {
              "namespaces": { "type": "array", "contains": { "const": "*" } }
            },
            "required": ["namespaces"]
          }
        },
        "required": ["supportingController"]
      },
      "then": {
        "properties": {
          "rbac": {
            "properties": {
              "clusterScoped": { "const": true }
            },
            "required": ["clusterScoped"]
          }
        },
        "required": ["rbac"]
      }
    }
  ]
}
