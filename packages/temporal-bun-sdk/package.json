{
  "name": "@proompteng/temporal-bun-sdk",
  "version": "0.6.0",
  "license": "MIT",
  "type": "module",
  "main": "./dist/src/index.js",
  "module": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/proompteng/lab.git",
    "directory": "packages/temporal-bun-sdk"
  },
  "files": [
    "dist",
    "dist/native",
    "README.md"
  ],
  "bin": {
    "temporal-bun-worker": "./dist/bin/start-worker.js",
    "temporal-bun": "./dist/bin/temporal-bun.js"
  },
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "default": "./dist/src/index.js"
    },
    "./config": {
      "types": "./dist/src/config.d.ts",
      "default": "./dist/src/config.js"
    },
    "./client": {
      "types": "./dist/src/client.d.ts",
      "default": "./dist/src/client.js"
    },
    "./workflow": {
      "types": "./dist/src/workflow/index.d.ts",
      "default": "./dist/src/workflow/index.js"
    },
    "./workflow/runtime": {
      "types": "./dist/src/workflow/runtime/index.d.ts",
      "default": "./dist/src/workflow/runtime/index.js"
    },
    "./worker": {
      "types": "./dist/src/worker.d.ts",
      "default": "./dist/src/worker.js"
    },
    "./testing": {
      "types": "./dist/src/testing/index.d.ts",
      "default": "./dist/src/testing/index.js"
    },
    "./bin/start-worker": "./dist/bin/start-worker.js",
    "./bin/cli": "./dist/bin/temporal-bun.js"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "dev": "bun --watch src/bin/start-worker.ts",
    "build": "bun run --filter @proompteng/otel build && tsc --project tsconfig.json --pretty false",
    "prepare": "bun run --filter @proompteng/otel build && tsc --project tsconfig.json --pretty false",
    "test": "bun test",
    "test:load": "bun scripts/run-worker-load.ts",
    "test:coverage": "bun test --coverage",
    "start:worker": "bun run dist/bin/start-worker.js",
    "temporal:start": "bun scripts/start-temporal-cli.ts",
    "temporal:stop": "bun scripts/stop-temporal-cli.ts",
    "prepack": "bun run build",
    "lint:oxlint": "oxlint --config ../../.oxlintrc.json .",
    "lint:oxlint:type": "oxlint --config ../../.oxlintrc.json --type-aware --tsconfig ./tsconfig.oxlint.json --ignore-pattern tests ."
  },
  "engines": {
    "bun": ">=1.1.20"
  },
  "dependencies": {
    "@bufbuild/protobuf": "^2.1.0",
    "@connectrpc/connect": "^2.1.0",
    "@connectrpc/connect-node": "^2.1.0",
    "@effect/schema": "^0.75.5",
    "@proompteng/otel": "workspace:*",
    "effect": "^3.2.0"
  },
  "devDependencies": {
    "@types/node": "^22.7.5",
    "bun-types": "^1.1.20",
    "typescript": "^5.9.3"
  }
}
