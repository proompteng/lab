{
  "name": "@proompteng/temporal-bun-sdk",
  "version": "0.1.0",
  "license": "MIT",
  "type": "module",
  "main": "./dist/src/index.js",
  "module": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "files": [
    "dist",
    "dist/native",
    "README.md",
    "bin"
  ],
  "bin": {
    "temporal-bun-worker": "./bin/start-worker.js",
    "temporal-bun": "./bin/temporal-bun.js"
  },
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "default": "./dist/src/index.js"
    },
    "./config": {
      "types": "./dist/src/config.d.ts",
      "default": "./dist/src/config.js"
    },
    "./client": {
      "types": "./dist/src/client.d.ts",
      "default": "./dist/src/client.js"
    },
    "./workflow": {
      "types": "./dist/src/workflow/index.d.ts",
      "default": "./dist/src/workflow/index.js"
    },
    "./workflow/runtime": {
      "types": "./dist/src/workflow/runtime/index.d.ts",
      "default": "./dist/src/workflow/runtime/index.js"
    },
    "./worker": {
      "types": "./dist/src/worker.d.ts",
      "default": "./dist/src/worker.js"
    },
    "./bin/start-worker": "./bin/start-worker.js",
    "./bin/cli": "./bin/temporal-bun.js"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "dev": "bun --watch src/bin/start-worker.ts",
    "build": "bunx tsc --project tsconfig.json --pretty false",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "start:worker": "bun run dist/bin/start-worker.js",
    "libs:download": "bun run scripts/download-temporal-libs.ts download",
    "build:native": "bun run libs:download && zig build -Doptimize=ReleaseFast --build-file bruke/build.zig",
    "build:native:zig": "bun run libs:download && zig build -Doptimize=ReleaseFast --build-file bruke/build.zig",
    "build:native:zig:bundle": "bun run libs:download && bun run scripts/build-zig-artifacts.ts",
    "build:native:zig:debug": "bun run libs:download && zig build -Doptimize=Debug --build-file bruke/build.zig",
    "temporal:start": "bun scripts/start-temporal-cli.ts",
    "temporal:stop": "bun scripts/stop-temporal-cli.ts",
    "ci:native:zig": "bun run libs:download && sh -c \"zig build -Doptimize=ReleaseFast --build-file bruke/build.zig && zig build -Doptimize=Debug --build-file bruke/build.zig test\"",
    "package:native:zig": "bun run scripts/package-zig-artifacts.ts",
    "test:native:zig": "bun run libs:download && zig build -Doptimize=Debug --build-file bruke/build.zig test",
    "prepack": "bun run build && bun run libs:download && bun run build:native:zig:bundle && bun run package:native:zig"
  },
  "engines": {
    "bun": ">=1.1.20"
  },
  "dependencies": {
    "@bufbuild/protobuf": "^2.10.0",
    "@connectrpc/connect": "^2.1.0",
    "@connectrpc/connect-node": "^2.1.0",
    "@temporalio/common": "^1.13.0",
    "@temporalio/proto": "^1.13.0",
    "@temporalio/worker": "^1.13.0",
    "@temporalio/workflow": "^1.13.0",
    "long": "^5.2.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.7.5",
    "bun-types": "^1.1.20"
  }
}
